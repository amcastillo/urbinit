#!/usr/bin/env bash
set -e

SHIP=novfes-lodzod
LOCKFILE="$HOME/.dlock/$SHIP.lock"

if [ ! -e $LOCKFILE ]; then
#  ~/bin/urbit

source ~/.profile
docker rm $SHIP
ID=$(docker run --name $SHIP -d -i -t $SHIP /.urbinit)
echo $ID > $LOCKFILE
docker attach $ID
docker commit $ID $SHIP > $LOCKFILE

  ~/bin/init-yacht-stop $SHIP
else
  echo "LOCK FILE EXISTS ALREADY... quitting"
fi
